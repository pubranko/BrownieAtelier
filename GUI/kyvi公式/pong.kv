#:kivy 2.0.0

<PongBall>:
    #ここはボールオブジェクトの定義のみ。
    size: 50, 50   #横幅50p、高さ50p
    canvas:
        Ellipse:    #楕円。位置は呼び出し元で定義したものを使う。
            pos: self.pos
            size: self.size

<PongPaddle>:
    #ここはパドルオブジェクトの定義のみ。
    size: 25, 200   #横幅25p、高さ200p
    canvas:
        Rectangle:  #長方形。位置は呼び出し元で定義したものを使う。
            pos: self.pos
            size: self.size

<PongGame>:
    # ここは全体のオブジェクトの定義を行う。またそこに配置するオブジェクトの呼び出しも行う。
    ball: pong_ball
    player1: player_left
    player2: player_right

    canvas:
        Rectangle:  #長方形の描画。中間の線の定義、位置は中央-5の上辺、縦線の太さ10、高さは画面の大きさと同じ。数値はピクセル単位。
            pos: self.center_x - 5, 0
            size: 10, self.height

    Label:  #左のラベル。文字の大きさ、ウィンドウの横幅/4の位置、上辺から下に50に、０を表示する。
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player1.score)

    Label:
        font_size: 70
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.player2.score)

    PongBall:   #PongGameの中央に表示
        id: pong_ball
        center: self.parent.center

    #パドルオブジェクトの定義。パドルは２つあるため、それぞれ異なるIDを振っている。
    PongPaddle:
        id: player_left     #プレイヤー１
        x: root.x   # x軸はゼロへ配置。
        center_y: root.center_y # y軸は、パドルの中心を画面の高さの中心へ配置する。

    PongPaddle:
        id: player_right    #プレイヤー２
        x: root.width - self.width  # X軸はXの最大値からパドルの幅を引いた位置へ配置
        center_y: root.center_y # y軸は、パドルの中心を画面の高さの中心へ配置する。
